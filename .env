# Telegram bot token (from @BotFather)
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Comma-separated Telegram user IDs allowed to use the bot
ALLOWED_USERS=123456789,987654321

# Maximum lines to fetch for /logs
LOG_TAIL=50

# Max characters per Telegram message (safe to keep below 4000)
MAX_MSG_CHARS=2000

# Max buffer flush interval in seconds when streaming
STREAM_FLUSH_SECONDS=2

# Optional: extra logging level INFO/DEBUG
LOG_LEVEL=INFO